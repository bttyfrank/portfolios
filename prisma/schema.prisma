datasource db {
  provider = "postgres"
  url      = env("DB_URL")
}

model User {
  id        Int      @default(autoincrement()) @id
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  username  String   @unique
  name      String
  email     String   @unique
  password  String
  todos     Todo[]
}

model Todo {
  id        Int      @default(autoincrement()) @id
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  content   String
  completed Boolean  @default(false)
  user      User?    @relation(fields: [userId], references: [id])
  userId    Int?
}
